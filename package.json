{
  "name": "async-ware",
  "version": "1.0.0",
  "description": "A class for easily writing js middlewares",
  "keywords": [
    "koa",
    "middleware",
    "compose"
  ],
  "main": "dist/lib/index.js",
  "scripts": {
    "dev": "babel src -w --out-dir ./dist",
    "build": "rm -rf dist & babel src --out-dir ./dist",
    "test": "NODE_ENV=test mocha test/unit/**/*.test.js",
    "coverage": "nyc --reporter=html --reporter=text mocha test/unit/**/*.test.js",
    "report-coverage": "npm run coverage && nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "eslint --fix --ext .js src --ignore-pattern *.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xiekw2010/Middleware.git"
  },
  "files": [
    "index.js"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xiekw2010/Middleware/issues"
  },
  "homepage": "https://github.com/xiekw2010/Middleware#readme",
  "devDependencies": {
    "codecov": "^3.1.0",
    "eslint": "^4.14.0",
    "eslint-config-antife": "^1.0.0",
    "mocha": "^4.1.0",
    "ramda": "^0.25.0"
  }
}
